<!-- Trigger the modal with a button -->

<!-- Modal -->
<div id="modalLanguage" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Select Language</h4>
      </div>
      <div class="modal-body">
       <ul>
         <li> <a {{#is lang "en"}} class="active_lang" {{/is}} href="?clang=en"> <span class="flag-icon flag-icon-us"></span> USA / English</a> </li>
         <li><a {{#is lang "ko"}} class="active_lang" {{/is}}  href="?clang=ko"><span class="flag-icon flag-icon-kr"></span> 한국 / 한국어</a></li>
         <li><a {{#is lang "zh"}} class="active_lang" {{/is}}  href="?clang=zh"><span class="flag-icon flag-icon-cn"></span> 中国 / 中文</a></li>
         <li> <a {{#is lang "vi"}} class="active_lang" {{/is}} href="?clang=vi"><span class="flag-icon flag-icon-vn"></span> Việt Nam / Tiếng Việt</a></li>
       </ul>
     </div>
     <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>

</div>
</div>

{{!-- Modal Contact --}}

<!-- Modal -->
<div id="modalContact" ng-controller="contactCtr" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{trans.contact_us}}</h4>
      </div>
      <div class="modal-body">



        <form ng-submit="contact(cont)">
          <div class="form-group">
            <label for="email">{{trans.email_address}}:</label>
            <input type="email" class="form-control" placeholder="{{trans.email_address2}}" ng-model="cont.email">
          </div>
          <div class="form-group">
            <label for="pwd">{{trans.message}}</label>
            <textarea id="contact_message" rows="5" class="form-control" placeholder="{{trans.leave_comments}}" title="{{trans.required}}" ng-model="cont.message"></textarea>
          </div>

          <button type="submit" class="btn btn-success">{{trans.send}}</button>
        </form>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>


